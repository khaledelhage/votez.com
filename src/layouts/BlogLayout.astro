---
import BaseLayout from './BaseLayout.astro';

interface Props {
  title: string;
  description?: string;
  date?: string;
  readTime?: string;
  image?: string;
}

const { title, description, date, readTime, image } = Astro.props;
---

<BaseLayout title={`${title} | Votez.com`} description={description}>
  <article class="blog-article">
    <div class="article-inner">
      <header class="article-header">
        <div class="article-meta">
          {date && <time class="article-date">{date}</time>}
          {readTime && <><span class="meta-sep">Â·</span><span class="article-read-time">{readTime}</span></>}
        </div>
        <h1 class="article-title">{title}</h1>
      </header>
      {image && (
        <div class="article-hero">
          <img src={image} alt={title} />
        </div>
      )}
      <div class="article-content">
        <slot />
      </div>
      <footer class="article-footer">
        <a href="/blogue" class="back-link"><span aria-hidden="true">&larr;</span> Retour au blogue</a>
      </footer>
    </div>
  </article>
</BaseLayout>

<style>
  .blog-article {
    padding: 3.5rem 2rem 6rem;
  }

  .article-inner {
    max-width: 42rem;
    margin: 0 auto;
  }

  .article-header {
    margin-bottom: 2.5rem;
  }

  .article-meta {
    display: flex;
    gap: 0.5rem;
    font-size: 0.875rem;
    color: var(--color-text-light);
    margin-bottom: 1rem;
  }

  .meta-sep {
    color: var(--color-border);
  }

  .article-title {
    font-size: 2.5rem;
    color: var(--color-primary);
    line-height: 1.15;
  }

  .article-hero {
    margin-bottom: 2.5rem;
    border-radius: var(--radius-lg);
    overflow: hidden;
  }

  .article-content :global(h2) {
    font-size: 1.5rem;
    color: var(--color-primary);
    margin-top: 2.5rem;
    margin-bottom: 1rem;
    font-family: var(--font-heading);
  }

  .article-content :global(h3) {
    font-size: 1.25rem;
    color: var(--color-primary);
    margin-top: 2rem;
    margin-bottom: 0.75rem;
    font-family: var(--font-heading);
  }

  .article-content :global(p) {
    margin-bottom: 1.25rem;
    color: var(--color-text);
    line-height: 1.75;
    font-size: 1.0625rem;
  }

  .article-content :global(ul),
  .article-content :global(ol) {
    margin-bottom: 1.25rem;
    padding-left: 1.5rem;
  }

  .article-content :global(li) {
    margin-bottom: 0.5rem;
    line-height: 1.7;
  }

  .article-footer {
    margin-top: 3rem;
    padding-top: 2rem;
    border-top: 1px solid var(--color-border);
  }

  .back-link {
    font-size: 0.9375rem;
    font-weight: 700;
    color: var(--color-accent);
    transition: color var(--transition-soft);
  }

  .back-link:hover {
    color: var(--color-accent-hover);
  }

  @media (max-width: 768px) {
    .blog-article {
      padding: 2.5rem 1.25rem 4rem;
    }

    .article-title {
      font-size: 1.875rem;
    }

    .article-content :global(p) {
      font-size: 1rem;
    }
  }
</style>
