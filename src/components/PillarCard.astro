---
interface Props {
  title: string;
  description: string;
  icon: string;
}

const { title, description, icon } = Astro.props;
---

<div class="pillar-card">
  <div class="pillar-icon" set:html={icon} />
  <h3 class="pillar-title">{title}</h3>
  <p class="pillar-desc">{description}</p>
</div>

<style>
  .pillar-card {
    padding: 2.5rem 2rem;
    border-radius: var(--radius-lg);
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.08);
  }

  .pillar-icon {
    width: 2.5rem;
    height: 2.5rem;
    margin-bottom: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    color: rgba(255, 255, 255, 0.8);
  }

  .pillar-icon :global(svg) {
    width: 100%;
    height: 100%;
  }

  .pillar-title {
    font-size: 1.125rem;
    font-weight: 600;
    color: #fff;
    margin-bottom: 0.75rem;
  }

  .pillar-desc {
    font-size: 0.9375rem;
    color: rgba(255, 255, 255, 0.6);
    line-height: 1.7;
  }
</style>
